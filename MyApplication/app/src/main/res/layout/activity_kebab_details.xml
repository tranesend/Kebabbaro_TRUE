<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KebabDetails">


        <TextView
            android:id="@+id/tv_dts_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:fontFamily="sans-serif-condensed-medium"
            style="@style/GreenStyleDetails"
            />


        <TextView
            android:id="@+id/tv_dts_prc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/imv_dts_eur"
            app:layout_constraintTop_toBottomOf="@id/tv_dts_add"
            android:layout_marginTop="7dp"
            style="@style/priceStyle"
            />


        <ImageView
            android:id="@+id/imv_dts_eur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_dts_add"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="40dp"
            android:layout_marginTop="5dp"
            style="@style/priceStyle"
            android:src="@drawable/euro25px"

            />


        <ImageView
            android:id="@+id/imv_dts_watch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/watch25px"
            app:layout_constraintBottom_toTopOf="@id/tv_dts_descr"
            app:layout_constraintTop_toBottomOf="@id/tv_dts_add"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="40dp"

            />


        <TextView
            android:id="@+id/tv_dts_fixtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="7pt"
            android:inputType="time"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="30dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/tv_dts_descr"
            app:layout_constraintLeft_toRightOf="@id/imv_dts_watch"
            app:layout_constraintTop_toBottomOf="@id/tv_dts_add"/>




        <TextView
            android:id="@+id/tv_dts_descr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Default"
            android:textSize="7pt"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tv_dts_prc"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"

            />




        <View
            android:id="@+id/breakline"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/tv_dts_descr"
            android:layout_marginTop="10dp"
            android:background="@android:color/black"/>


        <ImageView
            android:id="@+id/imv_dts_kebab_S"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/details75px"
            app:layout_constraintTop_toBottomOf="@id/breakline"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"/>

        <ImageView
            android:id="@+id/imv_dts_kebab_M"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/details100px"
            app:layout_constraintTop_toBottomOf="@id/breakline"
            app:layout_constraintLeft_toRightOf="@id/imv_dts_kebab_S"
            android:layout_marginTop="20dp"/>

        <ImageView
            android:id="@+id/imv_dts_kebab_B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/details125px"
            app:layout_constraintTop_toBottomOf="@id/breakline"
            app:layout_constraintLeft_toRightOf="@id/imv_dts_kebab_M"
            android:layout_marginTop="20dp"/>


        <TextView
            android:id="@+id/tv_dts_kebab_S"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/imv_dts_kebab_S"
            app:layout_constraintStart_toStartOf="@id/imv_dts_kebab_S"
            app:layout_constraintEnd_toEndOf="@id/imv_dts_kebab_S"
            android:layout_marginTop="10dp"
            android:textStyle="bold"


            />

        <TextView
            android:id="@+id/tv_dts_kebab_M"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/imv_dts_kebab_M"
            app:layout_constraintStart_toStartOf="@id/imv_dts_kebab_M"
            app:layout_constraintEnd_toEndOf="@id/imv_dts_kebab_M"
            android:layout_marginTop="10dp"
            android:textStyle="bold"


            />

        <TextView
            android:id="@+id/tv_dts_kebab_B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/imv_dts_kebab_B"
            app:layout_constraintStart_toStartOf="@id/imv_dts_kebab_B"
            app:layout_constraintEnd_toEndOf="@id/imv_dts_kebab_B"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            />

        <View
            android:id="@+id/breakline2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/tv_dts_kebab_B"
            android:layout_marginTop="10dp"
            android:background="@android:color/black"/>

</androidx.constraintlayout.widget.ConstraintLayout>