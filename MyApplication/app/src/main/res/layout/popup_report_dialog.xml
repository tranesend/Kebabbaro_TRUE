<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:background="@drawable/border_popup"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/menu_icon_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/menu_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        />

   <Button
       android:id="@+id/btn_report_1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       app:layout_constraintLeft_toRightOf="@id/menu_icon_1"
       app:layout_constraintTop_toTopOf="parent"
       android:text="Informazioni di un locale errate"
       android:background="@null"
       />





    <ImageView
        android:id="@+id/menu_icon_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/menu_icon"
        app:layout_constraintTop_toBottomOf="@id/menu_icon_1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/btn_report_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/menu_icon_2"
        app:layout_constraintTop_toBottomOf="@id/btn_report_1"
        android:layout_marginTop="10dp"
        android:text="Voglio segnalare un BUG!"
        android:background="@null"
        />

    <ImageView
        android:id="@+id/menu_icon_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/menu_icon"
        app:layout_constraintTop_toBottomOf="@id/menu_icon_2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/btn_report_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/menu_icon_3"
        app:layout_constraintTop_toBottomOf="@id/btn_report_2"
        android:layout_marginTop="10dp"
        android:text="Altro!"
        android:background="@null"

        />

<Button
    android:id="@+id/btn_close_rep"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Chiudi"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toBottomOf="@id/btn_report_3"
    android:layout_marginTop="10dp"
    android:background="@color/colorAccent"
    android:layout_marginLeft="5dp"
    android:layout_marginBottom="5dp"
    />




</androidx.constraintlayout.widget.ConstraintLayout>